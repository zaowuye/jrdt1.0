<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <app.yy.cn.jrdt.view.NoSccrollViewpager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_content">

    </app.yy.cn.jrdt.view.NoSccrollViewpager>


    <RadioGroup
        android:id="@+id/rg_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#F2F2F2">


        <RadioButton
            android:checked="true"
            android:id="@+id/xinwen"
            style="@style/Bottom_Tab_Style"
            android:text="新闻"
            android:drawableTop="@drawable/tab_xinwen_selector"/>
        <RadioButton
            android:id="@+id/zuqiu"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_zuqiu_selector"
            android:text="足球"/>
        <RadioButton
            android:id="@+id/lanqiu"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_lanqiu_selector"

            android:text="篮球"/>
        <RadioButton
            android:id="@+id/gushi"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_gushi_selector"
            android:text="股市"/>
    </RadioGroup>
</LinearLayout>